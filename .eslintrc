{
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "no-useless-escape": "warn",
        "no-constant-condition": [
            "warn",
            {
                "checkLoops": false
            }
        ]
    },
    "env": {
        "browser": true,
        "es2021": true,
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "uiControls": true
    }
    // "parser": "@babel/eslint-parser"
}